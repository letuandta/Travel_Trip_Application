<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardview_default_elevation">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="160dp"
                        app:shapeAppearance="@style/circleImageStyle"
                        app:srcCompat="@drawable/icons8_google"
                        app:strokeWidth="1dp">

                    </com.google.android.material.imageview.ShapeableImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/user_full_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:text="Lê Tuấn Đạt"
                                android:textStyle="bold">
                            </TextView>
                            <TextView
                                android:id="@+id/rating_scores"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5">
                            </TextView>
                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/star" />
                            <TextView
                                android:id="@+id/rating_date"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="50dp"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:text="27/08/2023 14:26:53">

                            </TextView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/rating_message"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Rất hấp dẫn mọi người nên đi">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
